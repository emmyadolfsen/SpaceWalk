@model IEnumerable<SpaceMVC.Models.Item>
@{
    ViewData["Title"] = "Hello SpaceCat";
}

<div class="text-center">
    <h1 class="display-4">Hello SpaceCat</h1>
</div>

<div class="mt-3 pt-3">
    <p class="text-center">
        Efter en lång dag med rymdpromenad
        <br />
        får äntligen <span class="text-info">@ViewBag.objName</span> bänka sig framför
        <span class="text-info">@ViewBag.objMovie</span>
        <br />
        med en stor skål <span class="text-info">@ViewBag.objDrink</span>.
</p>
    <div class="d-flex justify-content-center">
        <partial name="_ImagePartial" />

    </div>
    <p class="text-center mt-5 bg-dark p-2 rounded">
            @ViewBag.result
            <br />
            @ViewBag.result2
    </p>
</div>

<h2 class="pt-5">Andra som har varit på SpaceWalk:</h2>
<table class="table table-dark table-hover mt-3 rounded">
    <thead>
        <tr class="rounded">
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Movie)</th>
            <th scope="col">Vald dryck</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Movie)</td>
                <td>@Html.DisplayFor(modelItem => item.Drink)</td>
            </tr>
        }
    </tbody>
</table>

<partial name="_EndTagsPartial" />
<partial name="_FooterPartial" />


